<UserControl x:Class="Simulator.Controls.Conveyor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Simulator.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="280" d:DesignWidth="800">
    <Viewbox>
        <Canvas x:Name="canvas"
                Height="280"
                Width="800">

            <local:PhotoSensor x:Name="fs1"
                               Canvas.Left="10"
                               Height="200"
                               Width="50"/>

            <local:PhotoSensor  x:Name="fs2"
                                Canvas.Left="400"
                                Height="200"
                                Width="50"/>

            <local:PhotoSensor  x:Name="fs3"
                                Canvas.Left="600"
                                Height="200"
                                Width="50"/>

        </Canvas>
    </Viewbox>

</UserControl>
