<UserControl x:Class="SortingStantion.Controls.ComboBoxSerialPorts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SortingStantion.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="50">
    <Grid>
        <ComboBox Name="combobox"
                  Style="{StaticResource ComboBoxStyle}" 
                  Foreground="{StaticResource TextColor}"
                  Background="{StaticResource LightColor}"
                  FontSize="{StaticResource fontSizeData}"/>
    </Grid>
</UserControl>
