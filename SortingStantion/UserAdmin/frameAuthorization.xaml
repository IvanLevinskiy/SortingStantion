<Window x:Class="SortingStantion.UserAdmin.frameAuthorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SortingStantion.UserAdmin"
        mc:Ignorable="d"
        Title="Авторизация пользователя" Height="210" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel>
        
        <!--ЛОГИН-->
        <Grid Height="40"
              Margin="10">
            <TextBlock Text="Логин:"
                       VerticalAlignment="Center"/>

            <TextBox x:Name="tbxLogin"
                     Margin="80,2,5,2" 
                     VerticalAlignment="Center"/>

        </Grid>

        <!--ПАРОЛЬ-->
        <Grid Height="40"
              Margin="10">
            <TextBlock Text="Пароль:"
                       VerticalAlignment="Center"/>

            <PasswordBox x:Name="pwbPassword"
                         Margin="80,5,5,5"
                         VerticalAlignment="Center"/>

        </Grid>

        <!--КНОПКА АВТОРИЗАЦИИ-->
        <Button Height="40"
                Margin="80,5,15,5"
                Command="{Binding AuthorizationCMD}"
                Content="Авторизироваться"/>

    </StackPanel>
</Window>
