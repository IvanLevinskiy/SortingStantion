<Window x:Class="SortingStantion.ToolsWindows.windowPusherError.windowPusherError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SortingStantion.ToolsWindows.windowPusherError"
        mc:Ignorable="d"
          Style="{StaticResource WindowNotExitStyle}"
        ResizeMode="NoResize"
        Background="#FF323232"
        WindowStartupLocation="CenterOwner"
        Title="Ошибка отбраковки" Width="550" Height="250">
    <Grid >

        <Grid Height="80"
              Margin="20,30,20,0"
              VerticalAlignment="Top">

            <TextBlock Text="Ошибка отбраковки, продукт остался на конвейере. Найдите его на конвейере после автоматического сканера и удалите."
                       TextWrapping="Wrap"
                       TextAlignment="Justify"
                       Foreground="{StaticResource TextColor}"
                       FontSize="{StaticResource fontSizeData}"/>

        </Grid>

        <!--КНОПКА - ДОБАВИТЬ-->
        <Button x:Name="btnAddDeffect"
                Height="50"
                Width="300"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Margin="0,0,10,10"
                Style="{StaticResource btnStyle}"
                Background="{StaticResource LightColor}"
                Foreground="{StaticResource TextColor}"
                FontSize="{StaticResource fontSizeData}"
                Content="Закрыть" Click="btnCancel_Click"/>
    </Grid>
</Window>
